<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.DetalleProducto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-64dp"
        tools:layout_editor_absoluteY="769dp">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="339dp"
            android:layout_height="97dp"
            android:background="@drawable/fondo_busqueda"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="68dp"
            android:fontFamily="@font/adlam_display"
            android:text="Perfil"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button6" />

        <Button
            android:id="@+id/button8"
            android:layout_width="47dp"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#Ececec"
            android:drawableTint="#F2EEEE"
            android:foregroundTint="#FF5722"
            android:paddingLeft="0dp"
            app:icon="@drawable/casa"
            app:iconGravity="start"
            app:iconSize="40dp"
            app:iconTint="#FF5722"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/imageButton2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:rippleColor="#FF5722"
            app:strokeColor="#FF5722" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/adlam_display"
            android:text="Inicio"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/button8"
            tools:layout_editor_absoluteX="63dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="42dp"
            android:layout_height="54dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#Ececec"
            android:drawableTint="#F2EEEE"
            android:foregroundTint="#FF5722"
            android:paddingLeft="0dp"
            app:icon="@drawable/avatar_de_usuario"
            app:iconGravity="start"
            app:iconSize="40dp"
            app:iconTint="#FF5722"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@+id/imageButton2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/button7"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#FF5722"
            app:strokeColor="#FF5722" />

        <Button
            android:id="@+id/button7"
            android:layout_width="75dp"
            android:layout_height="69dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF5722"
            android:drawableTint="#F2EEEE"
            android:foregroundTint="#FF5722"
            android:paddingLeft="15dp"
            app:icon="@drawable/shopping_cart"
            app:iconGravity="start"
            app:iconSize="40dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/button8"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#FF5722"
            app:strokeColor="#FF5722" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toTopOf="@+id/textdescripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtcantidad" />

    <TextView
        android:id="@+id/titletxt"
        android:layout_width="313dp"
        android:layout_height="70dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/cuadrado_blanco"
        android:backgroundTint="#18605A"
        android:fontFamily="@font/adlam_display"
        android:shadowDx="1"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:text="Nombre de la Pizza"
        android:textColor="#FCFDFD"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.858" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="63dp"
        android:layout_height="27dp"
        android:layout_marginStart="178dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/adlam_display"
        android:text="S/. 10"
        android:textColor="#FF5722"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imagenpizza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imagenpizza"
        android:layout_width="334dp"
        android:layout_height="259dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/banner_naranja"
        app:layout_constraintBottom_toTopOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pizza" />

    <ImageView
        android:id="@+id/botonmenos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textdescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/minus" />

    <TextView
        android:id="@+id/txtcantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/adlam_display"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textdescripcion"
        app:layout_constraintStart_toEndOf="@+id/botonmenos" />

    <TextView
        android:id="@+id/textdescripcion"
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/fondo_busqueda"
        android:fontFamily="@font/adlam_display"
        android:paddingStart="10dp"
        android:text="Descripcion"
        android:textColor="#18605A"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAñadirCarrito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAñadirCarrito"
        android:layout_width="214dp"
        android:layout_height="60dp"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="144dp"
        android:backgroundTint="#FF5722"
        android:fontFamily="@font/adlam_display"
        android:text="Añadir al carrito"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>